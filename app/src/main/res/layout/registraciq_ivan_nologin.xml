<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@mipmap/backg2"
   >

    <EditText
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:inputType="textPersonName"
        android:hint="Име"
        android:ems="10"
        android:textSize="30dp"
        android:id="@+id/potrebitel"
        android:autoText="false"
        android:fontFeatureSettings="ь"
        android:layout_marginTop="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton"
        android:text="Иван"
        android:editable="false"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:inputType="textPersonName"
        android:hint="Фамилия"
        android:ems="10"
        android:textSize="30dp"
        android:id="@+id/editText1"
        android:autoText="false"
        android:fontFeatureSettings="ь"
        android:layout_below="@+id/potrebitel"
        android:layout_alignLeft="@+id/potrebitel"
        android:layout_alignStart="@+id/potrebitel"
        android:text="Петров"
        android:editable="false"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Мъж"
        android:id="@+id/radioButton"
        android:checked="true"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:editable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата на раждане:"
        android:textSize="30dp"
        android:textColor="#000"
        android:id="@+id/textView"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/den"
        android:maxLength="2"
        android:text="23"
        android:editable="false"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:maxLength="2"
        android:id="@+id/mesec"
        android:text="11"
        android:editable="false"
        android:layout_alignTop="@+id/den"
        android:layout_toRightOf="@+id/den"
        android:layout_toEndOf="@+id/den" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:maxLength="4"
        android:id="@+id/godini"
        android:text="1985"
        android:editable="false"
        android:layout_alignTop="@+id/mesec"
        android:layout_toRightOf="@+id/mesec"
        android:layout_toEndOf="@+id/mesec" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Образование:"
        android:textColor="#000"
        android:textSize="30dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/den"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заболяване:"
        android:textSize="30dp"
        android:textColor="#000"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText5"
        android:hint="CV"
        android:textSize="30dp"
        android:editable="false"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Начално"
        android:textColor="#000"
        android:textSize="30dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/den"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Парализа на долни крайници"
        android:textColor="#000"
        android:textSize="30dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/back"
        android:src="@mipmap/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/imageView4"
        android:src="@mipmap/profil"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="За контакти е нужна регистрация."
        android:textSize="30dp"
        android:textColor="#000"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/user_plus"
        android:layout_toLeftOf="@+id/user_plus"
        android:layout_toStartOf="@+id/user_plus" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/user_plus"
        android:src="@mipmap/user_plus"
        android:layout_below="@+id/editText5"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

</RelativeLayout>
