<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@mipmap/backg2">

    <EditText
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:inputType="textPersonName"
        android:hint="Име"
        android:ems="10"
        android:textSize="30dp"
        android:id="@+id/potrebitel"
        android:autoText="false"
        android:fontFeatureSettings="ь"
        android:layout_marginTop="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:inputType="textPersonName"
        android:hint="Фамилия"
        android:ems="10"
        android:textSize="30dp"
        android:id="@+id/editText1"
        android:autoText="false"
        android:fontFeatureSettings="ь"
        android:layout_below="@+id/potrebitel"
        android:layout_alignLeft="@+id/potrebitel"
        android:layout_alignStart="@+id/potrebitel" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Мъж"
        android:id="@+id/radioButton"
        android:checked="false"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Жена"
        android:id="@+id/radioButton2"
        android:checked="false"
        android:layout_alignTop="@+id/radioButton"
        android:layout_toRightOf="@+id/radioButton"
        android:layout_toEndOf="@+id/radioButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата на раждане:"
        android:textSize="30dp"
        android:textColor="#000"
        android:id="@+id/textView"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/den"
        android:maxLength="2"
        android:layout_below="@+id/radioButton"
        android:layout_alignRight="@+id/radioButton"
        android:layout_alignEnd="@+id/radioButton" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:maxLength="2"
        android:id="@+id/mesec"
        android:layout_alignTop="@+id/godini"
        android:layout_alignLeft="@+id/radioButton2"
        android:layout_alignStart="@+id/radioButton2" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:maxLength="4"
        android:id="@+id/godini"
        android:layout_alignTop="@+id/den"
        android:layout_toRightOf="@+id/mesec"
        android:layout_toEndOf="@+id/mesec" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Образование:"
        android:textColor="#000"
        android:textSize="30dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/den"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:inputType="textPersonName"
        android:hint="телефон"
        android:ems="10"
        android:textSize="30dp"
        android:id="@+id/editText3"
        android:autoText="false"
        android:fontFeatureSettings="ь"
        android:layout_marginTop="91dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/spinner2"
        android:layout_alignEnd="@+id/spinner2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:inputType="textPersonName"
        android:hint="email"
        android:ems="10"
        android:textSize="30dp"
        android:maxLength="10"
        android:id="@+id/editText4"
        android:autoText="false"
        android:fontFeatureSettings="ь"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3" />

    <Spinner
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/spinner"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/editText1"
        android:layout_alignEnd="@+id/editText1"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заболяване:"
        android:textSize="30dp"
        android:textColor="#000"
        android:id="@+id/textView3"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/spinner2"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/spinner"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:src="@mipmap/addphoto"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/save"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/zapazi" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/back"
        android:src="@mipmap/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/imageView4"
        android:src="@mipmap/lichni_danni"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="Парола"
        android:ems="10"
        android:id="@+id/editText11"
        android:layout_below="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText12"
        android:hint="CV"
        android:textSize="30dp"
        android:layout_below="@+id/editText11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText11"
        android:layout_alignEnd="@+id/editText11" />

</RelativeLayout>
